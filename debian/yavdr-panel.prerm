#!/bin/sh

set -e

PKG=yavdr-panel

case "$1" in
    configure)
        FILES="/etc/gtk-3.0/settings.ini"
        for f in $FILES
        do
                [ -L $f ] && rm $f
		dpkg-divert --remove --package ${PKG} --rename \
                        --divert $f.distrib $f
        done
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

