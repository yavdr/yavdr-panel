#!/bin/sh

set -e

PKG=yavdr-panel

case "$1" in
    configure)
        FILES="/usr/share/yavdr/events/actions/create-menuorg-xml"
        for f in $FILES
        do
                dpkg-divert --add --package ${PKG} --rename \
                        --divert $f.distrib $f
                [ -L "${f}" ] || ln -s "${f}.override" "${f}"
        done
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

